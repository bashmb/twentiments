<div style="width:600px; margin:0 auto;">
<br>
<h5><i><%= link_to "Twentiments > " , :friends, data: { no_turbolink: true }  %><%= "@" + @friend.twitterHandle %></i></h5>
<div class="row" >
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text" style="background-color:<%= @scoreColor %>" >
              <span class="card-title">	<img src="<%= @tweets[0].user.profile_image_url%>"> <%= @friend.firstName %> 
              	<i><%=link_to "@" + @friend.twitterHandle, "http://twitter.com/" + @friend.twitterHandle %></i>

              </span>
              <p><%= @tweets[0].text %></p>
            </div>
            <div class="card-action" style="background-color:<%= @scoreColor %>">
              <h4>Score: <%= @score %></h4>
              
            </div>

          </div>
        </div>

      </div>
<div id="container" style="width:100%; height:400px;"></div>
      <ul class="collection with-header">
        <li class="collection-header"><h4>Recent Tweets:</h4></li>

        <% for i in 1..10 %>
		     <li class="collection-item"><%= @tweets[i].text %></li>
		    <% end %>
      </ul>


      <script>
$(function () {
    var chart = new Highcharts.Chart({
        chart: {
            renderTo: 'container',
            type: 'spline'
        },
        xAxis: {
            categories: ['Main Item', 'Second Item', 'Third Item']
        },
        series: [{
            data: [{
                y: <%= @historicalScores[1] %>,
                tweet: 1,
                unlocked: 1,
                potential: 1,
            }, {
                y: <%= @historicalScores[2] %>,
                tweet: 2,
                unlocked: 1,
                potential: 2,
            }, {
                y: <%= @historicalScores[3] %>,
                tweet: 3,
                unlocked: 1,
                potential: 3,
            }]
        }],
        tooltip: {
            formatter: function() {return ' ' +
                'Score: ' + this.point.y + '<br />' +
                'Tweet: ' + this.point.tweet + '<br />' +
                'Potential: ' + this.point.potential;
            }
        }
    });
});
</script>