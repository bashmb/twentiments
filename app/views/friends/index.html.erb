<h1>All friends</h1>

<ul class="collapsible" data-collapsible="accordion">

<% @friends.each do |friend| %>
    <li>
    <% latestTweet = CLIENT.user_timeline(friend.twitterHandle)[0] %>
      <div class="collapsible-header"><i class="mdi-image-filter-drama"></i><%= link_to friend.firstName + " (" + friend.twitterHandle + ")", friend.id.to_s  %><div style="float:right"><%= (Indico.sentiment(latestTweet.text)*100).round %></div></div>
      <div class="collapsible-body"><p>
      <%= latestTweet.text %>


      </p></div>
    </li>
    <% end %>
</ul>