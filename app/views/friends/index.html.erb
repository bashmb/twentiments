
<div style="width:600px; margin:0 auto;">
<h4 style=""></h4>
<ul class="collapsible" data-collapsible="accordion">

<% @friends.each do |friend| %>
    <li>
    <% latestTweet = CLIENT.user_timeline(friend.twitterHandle)[0] %>
    <% score = (Indico.sentiment(latestTweet.text)*100).round %>

      <div class="collapsible-header" style="background-color:<%= @scoreColorArray[(score/10).round]%>; color=#FFFFFF ">

      	<span><img src="<%= latestTweet.user.profile_image_url %>" width="39" height="39"></span>
        <span style='color:#FFA292; font-size:1.6em;'><%= friend.firstName %></span>

          <div style="float:right">  
          <%= link_to "<i class='mdi-content-clear'></i>".html_safe, "/friends/"+friend.twitterHandle, :method => 'delete', :style => 'color:#1B2348' %>
          <%= link_to "<i class='mdi-content-send'></i>".html_safe, "friends/" + friend.twitterHandle, :style => 'color:#1B2348' %>
          
          
          
          </div>
      </div>
      <div class="collapsible-body">
      	<p>
        <%= auto_link(latestTweet.text).html_safe %>
      	</p>
  	  </div>
    </li>
    <% end %>
</ul>
</div>




