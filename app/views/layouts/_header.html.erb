<!-- Modal Structure -->
<div id="modal1" class="modal">
  <h4>Add new friend</h4>
    <%= form_for (Friend.new) do |f| %>
      <p>
        <%=  f.text_field :twitterHandle, :placeholder => "@Twitter Handle" %>
      </p>
      <div class="action-bar">
      <p style="float:right">
      <button type="button" class="btn btn-default modal-close" data-dismiss="modal">Close</button>
      <button type="submit" class="btn btn-default modal-action" data-dismiss="modal">Add Friend</button>
        </p>
      </div>
    <% end %> 

</div>

<!-- Modal Structure -->
<div id="modal2" class="modal">
  <h4>Compare Friends</h4>
    <%= form_tag("/friends/compareb", method: "") do %>

      <p>
        <%=  text_field_tag('user_1') %>
      </p>
      <p>
        <%=  text_field_tag('user_2') %>
      </p>

      <div class="action-bar">
      <p style="float:right">
      <button type="button" class="btn btn-default modal-close" data-dismiss="modal">Close</button>
      <button type="button" class="btn btn-default modal-action" id="compareBtn" data-dismiss="modal">Compare!</button>
        </p>
      </div>
    <% end %> 

</div>


<script>
  $(document).ready(function(){
    // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
    $('.modal-trigger').leanModal();
  });
</script>
<script>
  $('#compareBtn').click(function() {
      alert($('#user_1').val());
  });
</script>
